<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= edit ? "Edit Profile" : "Create Account" %>
    </title>


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 400px;
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h1 {
            color: #333;
            font-size: 28px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        input[type="email"],
        input[type="text"],
        input[type="password"],
        input[type="file"] {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

        input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .error-message {
            background-color: #fee;
            color: #c33;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 20px;
            font-size: 14px;
            border-left: 4px solid #c33;
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }



        .footer-text {
            text-align: center;
            color: #999;
            font-size: 13px;
            margin-top: 20px;
        }

        .footer-text a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .error-text {
            color: #e53935;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>

<body>
    <div class="container">

        <div class="login-header">
            <h1>
                <%= edit ? "Edit Profile" : "Create Account" %>
            </h1>
        </div>

        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
            <% } %>

                <form id="myform" method="POST" action="<%= edit ? '/api/updateProfile' : '/api/signup' %>"
                    enctype="multipart/form-data">

                    <div class="form-group">
                        <label>Username</label>
                        <input name="username" type="text" id="username" placeholder="Enter username"
                            value="<%= edit ? user.username : '' %>" <%=edit ? 'readonly' : 'required' %> >
                        <small class="error-text" id="usernameerror"></small>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input name="password" type="password" id="password" placeholder="Password" <%=edit ? 'readonly'
                            : 'required' %> >
                        <small class="error-text" id="passworderror"></small>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input name="confirmPassword" type="password" id="confirmPassword"
                            placeholder="Confirm Password" <%=edit ? 'readonly' : 'required' %> >
                        <small class="error-text" id="confirmpassworderror"></small>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" type="email" id="email" placeholder="Enter email"
                            value="<%= edit ? user.email : '' %>" <%=edit ? 'readonly' : 'required' %>>
                        <small class="error-text" id="emailerror"></small>
                    </div>

                    <div class="form-group">
                        <label>Profile Image</label>
                        <input type="file" name="profile" id="profile">
                        <% if (edit && user.profilePath) { %>
                            <img src="/upload/<%= user.profilePath %>" style="margin-top:10px;width:80px;">
                            <% } %>
                                <small class="error-text" id="profileerror"></small>
                                
                    </div>


                    <button type="submit" class="submit-btn">
                        <%= edit ? "Update Profile" : "Signup" %>
                    </button>
                </form>

                <p class="footer-text">
                    Already have an account? <a href="/login">Login</a>
                </p>

    </div>

    <script>
        document.getElementById("myform").addEventListener("submit", async function (event) {
            event.preventDefault();

            const isEdit = `<%= edit %>` === "true";
            const hasExistingImage = `<%= edit && user.profilePath ? true : false %>` === "true";


            const username = document.getElementById("username").value.trim();
            const email = document.getElementById("email").value.trim();
            const password = document.getElementById("password").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const profile = document.getElementById("profile").files[0];

            let valid = true;

            // clear errors
            document.querySelectorAll(".error-text").forEach(e => e.innerText = "");

            // username
            if (!username) {
                document.getElementById("usernameerror").innerText = "Username required";
                valid = false;
            }

            // email
            if (!email || !email.includes("@")) {
                document.getElementById("emailerror").innerText = "Valid email required";
                valid = false;
            }

            // password checks only for signup
            if (!isEdit) {
                if (!password) {
                    document.getElementById("passworderror").innerText = "password required";
                    valid = false;
                }

                if (password !== confirmPassword) {
                    document.getElementById("confirmpassworderror").innerText = "Passwords do not match";
                    valid = false;
                }
            }

            if (!profile && !hasExistingImage) {
                document.getElementById("profileerror").innerText =
                    "Profile image is required";
                valid = false;
            }

            if (profile) {
                const allowedTypes = ["image/jpeg", "image/png", "image/jpg", "image/webp"];
                const maxSize = 2 * 1024 * 1024; // 2MB

                if (!allowedTypes.includes(profile.type)) {
                    document.getElementById("profileerror").innerText =
                        "Only JPG, PNG, JPEG or WEBP images allowed";
                    valid = false;
                }

                if (profile.size > maxSize) {
                    document.getElementById("profileerror").innerText =
                        "Image must be less than 2MB";
                    valid = false;
                }
            }

            if (!valid) return;


            const formData = new FormData(this);
            const url = "<%= edit ? '/api/updateProfile' : '/api/signup' %>";

            try {
                const response = await fetch(url, {
                    method: "POST",
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href = result.redirect || "/login";
                } else {
                    alert(result.error);
                }
            } catch (err) {
                alert("Something went wrong");
            }
        });
    </script>
</body>

</html>